<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="oh_ninebox_group_user" model="res.groups">
        <field name="name">9-Box Grid User</field>
        <field name="category_id" ref="base.module_category_human_resources_appraisals"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="oh_ninebox_group_manager" model="res.groups">
        <field name="name">9-Box Grid Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_appraisals"/>
        <field name="implied_ids" eval="[(4, ref('oh_ninebox_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>